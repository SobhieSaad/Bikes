@model IEnumerable<BikesShop.Models.Product>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model.Count() > 0)

{

    <div class="alert alert-info" role="alert">
        <h2>Well done!</h2> 
        <h3>Search Results</h3> 
    </div>

    <div class="agileits-w3layouts-rides-grids">

       @foreach (var item in Model)
       {
           if (item.ImageName != null)
           {

        <div class="col-sm-4 rides-grid">
            <div class="rides-grid-info">
                <a href="@Url.Action("Details", "Store", new { id = item.Id })">
                    <img src="@Url.Content("~/images/" + item.ImageName)" alt="" style="width:400px; height:350px"/>
                    <h4 style="text-align:center">@item.Name</h4>
                 </a>
             </div>
        </div>
           }
       }
        <div class="clearfix"> </div>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
       <h2>Ohps!</h2> 
       <h3>No Result found</h3>
    </div>
}
