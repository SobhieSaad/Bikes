@model IEnumerable<BikesShop.Models.Product>

@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p class="text-center text-danger">
    @ViewData["RemovesSuccess"]
</p>
<center><h2>All products</h2></center>


<table class="table table-striped" style="background-color:cornflowerblue; margin-left:10px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brief )
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="col-md-4">
                @Html.DisplayFor(modelItem => item.Brief )
            </td>
            <td>
                <div class="row">
                    @using (Html.BeginForm("ChhoseActionProduct", "Home", new { Id = item.Id }))
                {
                        <input type="submit" value="Edit" name="Command1" title="Edit" class="btn btn-primary" />
                        <input type="submit" value="Delete" name="Command1" title="Delete" class="btn btn-danger" />
                    }

                </div>
            </td>
        </tr>
    }

</table>


